<p>勤務表</p>
<div class="container">
  <h1>1月の勤務表</h1>
  <table class="table" border="1" style="border-collapse: collapse">
    <thead>
    <tr>
      <th>日付</th>
      <th>曜</th>
      <th>出社時間</th>
      <th>退社時間</th>
      <th>拘束時間</th>
      <th>勤務時間</th>
      <th>休憩時間</th>
    </tr>
    </thead>

    <%=(Date.parse("#{@start_date}")..Date.parse("#{@end_date}")).each_with_index do |date,i| %>
      <tr>
        <td><%=date.strftime("%m月%d日") %></td>
        <td><%= @wdays[date.wday] %></td>
        <% if @record[i].first %>
          <% puts @record[i].first %>
          <% puts @record[i].first.work_in %>
          <% puts @record[i].first.work_out %>
          <% puts "putput" %>
        <td> <%= @record[i].first.work_in.strftime("%H:%M") %></td>
        <% else %>
        <td> </td>
        <% end %>
        <% if @record[i].first %>

          <td> <%= @record[i].first.work_out.strftime("%H:%M") %></td>
        <% else %>
          <td> </td>
        <% end %>
        <% if @record[i].first %>
          <td> <%= " #{((@record[i].first.work_out - @record[i].first.work_in) / 3600).round}:#{((@record[i].first.work_out - @record[i].first.work_in) % 3600 / 60).round}"  %></td>
        <% else %>
          <td> </td>
        <% end %>
        <% if @record[i].first %>
          <td> <%= " #{((@record[i].first.work_out - @record[i].first.work_in - @record[i].first.break_time) / 3600).round}:#{((@record[i].first.work_out - @record[i].first.work_in - @record[i].first.break_time) % 3600 / 60).round} "  %></td>
        <% else %>
          <td> </td>
        <% end %>
        <% if @record[i].first %>
          <td> <%= " #{(@record[i].first.break_time / 3600).round}:#{(@record[i].first.break_time % 3600 / 60).round}"  %></td>
        <% else %>
          <td> </td>
        <% end %>
      </tr>
    <%end%>

  </table>

</div>