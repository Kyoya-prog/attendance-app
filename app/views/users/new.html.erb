
<h1>新規登録</h1>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<%= form_with model: @user do |form| %>
  <p>名前</p>git a
  <%= form.text_field :name %>
  <p>メールアドレス</p>
  <%= form.text_field :email %>
  <p>パスワード</p>
  <%= form.text_field :password %>
  <p>パスワード確認</p>
  <%= form.text_field :password_confirmation %>
  <br>
  <%= form.submit "会員登録"%>
<% end %>